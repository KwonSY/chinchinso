<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efefef">

    <RelativeLayout
        android:id="@+id/layout_poker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_poker_pic"
            android:layout_width="@dimen/profile_s"
            android:layout_height="@dimen/profile_s"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_noprofile_s" />

        <TextView
            android:id="@+id/txt_poker_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_poker_pic"
            android:layout_centerHorizontal="true"
            android:text="로딩중.." />
    </RelativeLayout>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:layout_toRightOf="@id/layout_poker"
        android:src="@drawable/icon_y_arrow_to_bottom1" />

    <RelativeLayout
        android:id="@+id/layout_fr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/arrow">

        <ImageView
            android:id="@+id/img_fr_pic"
            android:layout_width="@dimen/profile_s"
            android:layout_height="@dimen/profile_s"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_noprofile_s" />

        <TextView
            android:id="@+id/txt_fr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_fr_pic"
            android:layout_centerHorizontal="true"
            android:text="로딩중.." />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_deny"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:background="@drawable/border_circle_bk1"
        android:text="거절"
        android:textSize="9sp"/>

    <TextView
        android:id="@+id/txt_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/txt_deny"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/border_circle_bk1"
        android:text="수락"
        android:textSize="9sp"/>

</RelativeLayout>
