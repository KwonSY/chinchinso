<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_chatBox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_match"
            android:layout_width="@dimen/profile_s"
            android:layout_height="@dimen/profile_s"
            android:layout_centerHorizontal="true"
            android:background="@drawable/border_round_w1"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_noprofile_s" />

        <TextView
            android:id="@+id/match_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_match"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:text="브릿지" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/icon_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="7dp"
        android:src="@drawable/icon_y_arrow_to_bottom1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_blind"
            android:layout_width="@dimen/profile_s"
            android:layout_height="@dimen/profile_s"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_noprofile_s" />

        <TextView
            android:id="@+id/blind_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_blind"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:text="User_Name" />
    </RelativeLayout>

</LinearLayout>
