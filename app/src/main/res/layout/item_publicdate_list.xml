<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_chatBox"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp">

    <RelativeLayout
        android:id="@+id/layout_blind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/blind_pic"
            android:layout_width="@dimen/profile_l"
            android:layout_height="@dimen/profile_l"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_noprofile" />

        <ImageView
            android:id="@+id/match_pic"
            android:layout_width="@dimen/profile_s"
            android:layout_height="@dimen/profile_s"
            android:layout_alignBottom="@id/blind_pic"
            android:layout_alignRight="@id/blind_pic"
            android:src="@drawable/icon_noprofile_m" />

        <TextView
            android:id="@+id/blind_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blind_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Blinder Name" />

        <TextView
            android:id="@+id/match_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blind_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="MatchMaker"
            android:textColor="#ffffff"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/blind_name"
            android:text="#hash loading..." />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_gradient_bk_trans"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/match_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="별풍선 37000개"
            android:textColor="#f1594a"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>
