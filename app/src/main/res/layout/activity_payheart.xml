<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.pumkit.chin.chinchinso.MainActivity">

    <include
        android:id="@+id/topbar"
        layout="@layout/top_bar_transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/layout_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topbar"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_pay_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_heart_or" />

            <TextView
                android:id="@+id/txt_have_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/img_pay_heart"
                android:text="14개" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하트를 충전하면, 어떤 것들을 할 수 있나요?" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ffafaf"
                android:text="친친팅"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ffafaf"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text=""/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ffafaf"
                android:text="프리미엄 계정을 가져보자!"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_explain"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="10개" />

                <TextView
                    android:id="@+id/btn_charge1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_circle_bk1"
                    android:padding="10dp"
                    android:text="$5 충전" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="30개" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_circle_bk1"
                    android:padding="10dp"
                    android:text="$5 충전" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="50개" />

                <TextView
                    android:id="@+id/btn_charge3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_circle_bk1"
                    android:padding="10dp"
                    android:text="$5 충전" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="100개" />

                <TextView
                    android:id="@+id/btn_charge4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/border_circle_bk1"
                    android:padding="10dp"
                    android:text="$5 충전" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
